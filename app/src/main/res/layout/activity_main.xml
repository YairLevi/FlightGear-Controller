<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.example.myapplication22.view_model.ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="@color/cardview_dark_background">


        <VideoView
            android:id="@+id/gif_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
            android:id="@+id/gradiant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiant_black"
            android:visibility="visible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.1"
            android:src="@drawable/logo_fg"

            />


        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:hint="@string/press_to_type"
            android:inputType="textPersonName"
            android:text="@={vm.port}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintHorizontal_bias="0.817"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.778"
            app:layout_constraintWidth_percent="0.6"
        />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/port"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName2"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName2"
            app:layout_constraintVertical_bias="0.0"
        />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/host_ip"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintHorizontal_bias="0.787"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
            app:layout_constraintWidth_percent="0.25"
            />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:hint="@string/press_to_type"
            android:inputType="textPersonName"
            android:text="@={vm.ip}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintWidth_percent="0.6"
        />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/teal_700"
            android:text="@string/connect_to_flightgear"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
            app:layout_constraintVertical_bias="0.336"
            app:layout_constraintWidth_percent="0.7"
        />

        <!--

        ^^^^^^^^^^^^^
        FIRST SCREEN

        -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/altimeter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/altimeter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintHorizontal_bias="0.68"
            android:visibility="invisible"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/turn_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/turn_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintHorizontal_bias="0.32"
            android:visibility="invisible"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/altitude"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/altitude"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.68"
            android:visibility="invisible"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/airspeed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/airspeed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.32"
            android:visibility="invisible"
            />

        <SeekBar
            android:id="@+id/rudderBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/throttleBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:thumbTint="@color/gray"
            android:progressTint="@color/black"
            android:visibility="invisible"
            />

        <SeekBar
            android:id="@+id/throttleBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/joystick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rudderBar"
            app:layout_constraintVertical_bias="0.65"
            android:thumbTint="@color/gray"
            android:progressTint="@color/black"
            android:visibility="invisible"
            />

        <com.example.myapplication22.view.JoystickView
            android:id="@+id/joystick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/throttleBar"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintWidth_percent="0.8"
            android:background="@color/blue_background"
            android:visibility="invisible"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/base"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/throttleBar"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.45"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/controller"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/throttleBar"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.45"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>